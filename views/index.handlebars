<div class = "container-fluid">

    <div class="jumbotron text-center">
        <img src= "/images/burgerImage.png" class="img-responsive center-block" alt="Burger" style = "width:250px">
        <h1>Eat Da Burger</h1>
        <!-- creating a row where columns for the devoured and undevoured burgers will go -->
        <div class = "row">
            <!-- undevoured burgers -->
            <div class="col-md-offset-1 col-md-4 col-md-offset-1">
                <ol>
                    <!--going through all the burgers in the database -->
                    {{#each burgers}}
                        <!-- if the devoured column is false -->
                        {{#unless this.devoured}}
                            <!-- the burger is populated in the list, with a devour button-->
                            <li>
                                {{this.burger_name}}
                                <form action="/{{this.id}}?_method=PUT" method="POST">
                                    <input type="hidden" name="devoured" value="true">
                                    <button type="submit">Devour it!</button>
                                </form>
                            </li>
                        {{/unless}}
                    {{/each}}
                </ol>
            </div> <!-- column for the undevoured burgers ends here -->

            <!-- devoured burgers -->
            <div class="col-md-offset-1 col-md-4 col-md-offset-1">
                 <ol>
                    <!-- going through the list of all the burgers -->
                    {{#each burgers}}
                        <!-- if the devoured column is true -->
                        {{#if this.devoured}}
                            <!-- burger is just listed on the page -->
                            <li>
                                {{this.burger_name}}
                            </li>
                        {{/if}}
                    {{/each}}
                </ol>               
            </div> <!-- column for the devoured burgers ends here -->
        </div>
        <!-- form where the user can enter what kind of burger they want to eat -->
        <form action="/" method="POST">
            <div class="form-group">
                <input class="form-control input-lg" type="text" placeholder="" name="burger_name">
            </div>
            <button class="btn btn-primary btn-lg" type="submit" role="button">Let's cook it</button>
        </form>
    </div> <!-- jumbotron ends here -->

</div> <!-- container ends here -->